<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to your Inbox!"
        android:textSize="60sp"
    android:textStyle="bold"
    android:layout_marginBottom="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/tvInboxMessage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New destinations added! Explore our latest travel options."
        android:layout_marginBottom="8dp"
        android:textSize="40sp"
        android:singleLine="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
    android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/tvInboxMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New travel destination recommendations!"
        android:layout_marginBottom="8dp"
        android:textSize="40sp"
        android:singleLine="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/tvInboxMessage3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The latest flight discounts!"
        android:layout_marginBottom="8dp"
        android:textSize="40sp"
        android:singleLine="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/tvInboxMessage4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UW Student Specials."
        android:layout_marginBottom="8dp"
        android:textSize="40sp"
        android:singleLine="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/tvInboxMessage5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manual customer service updates."
        android:layout_marginBottom="8dp"
        android:textSize="40sp"
        android:singleLine="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_margin="8dp"/>
</LinearLayout>
